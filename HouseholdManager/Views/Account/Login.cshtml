@model Login
@{
    ViewData["Title"] = "Login";
}

<h1 class="bg-info text-white">Login</h1>
<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        To set up this app specifically for your use contact me below.
    </div>
    <div class="form-group">
        You will be sent the default admin for logging in.
    </div>
    <div class="form-group">
        To see and practice features as a user log-in as the "Default User"
    </div>
    <div class="form-group">        
        Default User: defaultUser@yahoo.com (Password "Coder77@1")
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        Remember me? <input type="checkbox" asp-for="Remember" />
    </div>
    <button class="btn btn-primary" type="submit">Log In</button>
</form>