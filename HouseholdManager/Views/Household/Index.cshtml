@model IEnumerable<HouseholdManager.Models.Household>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HouseholdName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseholdIcon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseholdName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseholdIcon)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HouseholdId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HouseholdId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HouseholdId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
