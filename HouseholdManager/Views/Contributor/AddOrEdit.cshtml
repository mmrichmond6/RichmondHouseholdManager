@model HouseholdManager.Models.Contributor

@{
    ViewData["PageTitle"] = Model.ContributorId == 0 ? "Create a new contributor" : "Edit contributor";
}


<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color: #1a222b">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="ContributorId" value="@Model.ContributorId" />
                <div class="mb-3">
                    <div class='e-btn-group custom-rbt-group'>
                        <input type="radio" id="radioleft" name="ContributorType" value="Admin" checked="@(Model.ContributorType=="Admin")" />
                        <label class="e-btn" for="radioleft">Admin</label>
                        <input type="radio" id="radiomiddle" name="ContributorType" value="Contributor" checked="@(Model.ContributorType=="Contributor")" />
                        <label class="e-btn" for="radiomiddle">Contributor</label>
                    </div>
                </div>
                <div class="mb-3">
                    <ejs-dropdownlist id="ddlUser" ejs-for="UserName"
                                      dataSource="@ViewBag.IdentityUsers" placeholder="User"
                                      floatLabelType="Always" allowFiltering="true" ignoreAccent="true"
                                      filterType="Contains" popupHeight="220px">
                        <e-dropdownlist-fields value="UserName" text="UserName"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="UserName" class="text-danger" fs-6></span>
                    </div>

                <div class="mb-3">
                    <label asp-for="ContributorIcon" class="control-label"></label>
                    <input asp-for="ContributorIcon" id="iconInput" class="form-control" hidden />
                    @*<ejs-textbox id="contributorIcon" placeholder="ContributorIcon" ejs-for="ContributorIcon" floatLabelType="Always"></ejs-textbox>*@
                    @await Html.PartialAsync("_IconMenuPartial")
                    <span asp-validation-for="ContributorIcon" class="text-danger" fs-6></span>
                </div>
                <div class="mb-3">
                    <ejs-dropdownlist id="ddlHousehold" ejs-for="HouseholdId"
                                      dataSource="@ViewBag.Households" placeholder="Household"
                                      floatLabelType="Always" allowFiltering="true" ignoreAccent="true"
                                      filterType="Contains" popupHeight="220px">
                        <e-dropdownlist-fields value="HouseholdId" text="HouseholdNameWithIcon"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="HouseholdId" class="text-danger" fs-6></span>
                </div>
                <ejs-button id="submit" type="submit" content="Submit" cssClass="e-success"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-user-large fa-2xl"></i>
        </div>
    </div>
</div>

